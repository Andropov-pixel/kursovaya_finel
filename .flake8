[flake8]
# Базовые настройки
max-line-length = 88
extend-ignore =
    E203,  # Пробел перед ':' (иногда конфликтует с Black)
    W503,  # Разрыв строки перед бинарным оператором (устаревшее)
    E501,  # Слишком длинная строка (уже управляется max-line-length)
    F401,  # Неиспользуемый импорт
exclude =
    .git,
    __pycache__,
    migrations,
    venv,
    *.pyc,
    *.swp,
per-file-ignores =
    # Игнорировать D100 (отсутствие docstring) в тестах
    tests/*: D100,
    # Игнорировать S101 (использование assert) в тестах
    tests/*: S101,
    # Игнорировать E402 (импорт не в начале файла) в скриптах
    scripts/*: E402,